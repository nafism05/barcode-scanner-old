<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.Register">
        <item name="colorPrimary">@color/sun_rise</item>
        <item name="colorPrimaryDark">@color/sun_rise</item>
        <item name="android:windowBackground">@color/sun_rise</item>
        <item name="colorControlNormal">@color/seashell</item>
        <item name="colorControlActivated">@color/shadow</item>
        <item name="colorControlHighlight">@color/shadow</item>
        <item name="android:textColorHint">@color/seashell</item>
        <item name="android:textColorPrimary">@color/shadow</item>
    </style>

    <style name="StatusBarLine" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/sun_set</item>
        <item name="colorAccent">@color/breath_fire</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sun_rise</item> 
        <item name="colorPrimaryDark">@color/sun_set</item> 
        <item name="colorControlHighlight">@color/butter_milk</item> 
        <item name="colorAccent">@color/breath_fire</item>
    </style>

    <!-- Theme for launch screen. -->
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/charcoal</item>
        <item name="android:textColorPrimary">@color/seashell</item>
        <item name="android:background">@color/aqua</item>
    </style>

</resources>
